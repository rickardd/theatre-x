<div class="">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% @courses.each do |course| %>
        <h1 class="h1"><%= course.title %></h1>
        <blockquote>
          <p><%= course.column_1 %></p>
        </blockquote>
        <blockquote>
          <p><%= course.column_2 %></p>
        </blockquote>
        <blockquote>
          <% if course.on_page %>
            <p class="font-green"><span class="glyphicon glyphicon-ok-circle"></span>Will be shown on the page</p>
          <% else %>
            <p class="font-red"><span class="glyphicon glyphicon-remove-circle"></span>This page is hidden</p>
          <% end %>
        </blockquote>
        <div class="btn-group">
          <%= link_to 'Edit', edit_course_path(course) , class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

