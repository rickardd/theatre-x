<p id="notice"><%= notice %></p>

<h1>Listing Avatars</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Category</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avatars.each do |avatar| %>
      <tr>
        <td><%= avatar.image %></td>
        <td><%= avatar.category %></td>
        <td><%= avatar.category_id %></td>
        <td><%= link_to 'Show', show_avatar %></td>
        <td><%= link_to 'Edit', edit_show_avatar_path(avatar) %></td>
        <td><%= link_to 'Destroy', show_avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

