<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% @co_operations.each do |co_operation| %>
          <h1 class="h1"><%= co_operation.title %></h1>
          <blockquote>
            <p><%= co_operation.column_1 %></p>
          </blockquote>
          <blockquote>
            <p><%= co_operation.column_2 %></p>
          </blockquote>
          <blockquote>
          <% if co_operation.on_page %>
            <p class="font-green"><span class="glyphicon glyphicon-ok-circle"></span>Will be shown on the page</p>
          <% else %>
            <p class="font-red"><span class="glyphicon glyphicon-remove-circle"></span>This page is hidden</p>
          <% end %>
        </blockquote>
          <blockquote>
            <%= image_tag co_operation.image, width: 250 %>
          </blockquote>
          <div class="btn-group">
            <%= link_to 'Edit', edit_co_operation_path(co_operation), class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</div>




