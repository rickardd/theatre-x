
  <%= hidden_field_tag :id, date.id  %>
  <%#= hidden_field :show_date, :id, value: date.id  %>
  <%= hidden_field :show_date, :show_id, value: @show_id  %>

  <div class="form-group">
    <%= f.label :date, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :date, class: "form-control", placeholder: "E.g 1 Maj 2017" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :soldOut_true, 'Still have tickets', class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.radio_button :soldOut, 'false', :checked => !date.soldOut   %>
    </div>
  </div>

  <div class="form-group">
  <%= f.label :soldOut_false, 'Tickets sould out', class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.radio_button :soldOut, 'true', :checked => date.soldOut %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
    <div class="btn-group">
      <%= f.submit class: "btn btn-primary" %>

      <%= link_to 'Delete Date',
            {
              :controller => "showdates",
              :action => "destroy",
              :id => date.id,
              :show_id => @show_id },
              :method => "delete",
              :class => "btn btn-danger",
              :data => {confirm: "Do you want to delete this date?"}  %>

    </div>
    </div>
  </div>





