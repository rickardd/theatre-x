
<%= render 'admin/error_messages', obj: @date %>

<div class="">
  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <h1 class="h1">Create a date</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for @date,
            :url => url_for(:controller => 'showdates', :action => 'create', :method => 'post'),
            html: { class: "form-horizontal"} do |f| %>
        <%= render 'shows/form_dates', f: f, date: @date %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
        <%= link_to "View Show", show_path( id: @show_id ), class: "btn btn-default" %>
        <%= link_to "View All Shows", shows_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>

</div>


