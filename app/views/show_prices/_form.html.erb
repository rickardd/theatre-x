
  <%= hidden_field_tag :id, price.id  %>
  <%= hidden_field_tag :show_id, @show_id  %>

  <div class="form-group">
    <%= f.label :price, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :price, class: "form-control", placeholder: "Only numbers between 0-9999" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :description, class: "form-control", placeholder: "E.g MÃ¤ngdrabatt minst 10 biljetter." %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
    <div class="btn-group">
      <%= f.submit class: "btn btn-primary" %>
      <% if !price.new_record? %>
        <%= link_to 'Delete Price',
              {
                :controller => "show_prices",
                :action => "destroy",
                :id => price.id,
                :show_id => @show_id },
                :method => "delete",
                :class => "btn btn-danger",
                :data => {confirm: "Do you want to delete price?"}  %>
      <% end %>
    </div>
    </div>
  </div>





